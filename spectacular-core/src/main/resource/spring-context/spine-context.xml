<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


    <!-- set up services -->
    <bean id="filesystemDocumentReader" class="minderupt.spectacular.reader.file.FilesystemBasedDocumentReader"/>




    <bean id="spine" class="minderupt.spectacular.spine.ComponoSpine">
        <property name="documentReader" ref="filesystemDocumentReader" />
    </bean>


</beans>